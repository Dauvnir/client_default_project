<style>
  #whyUsWrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: row;
    gap: 4rem;

    width: 100%;
    max-width: 70rem;
    height: auto;
  }

  #company_owner {
    width: 25rem;
    height: 25rem;

    aspect-ratio: 1;
    object-fit: contain;
    border-radius: 15px;
  }

  #wrapper {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    flex-grow: 1;
    width: auto;
    height: auto;
  }
  .svgWrapper {
    min-width: 2rem;
    min-height: 2rem;
    width: 3rem;
    height: 3rem;

    & svg {
      width: 100%;
      height: 100%;
    }
  }
  .svgTextWrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: row;
    gap: 1.5rem;
  }

  .svgTextWrapper div:last-child {
    display: flex;
    flex-direction: column;
    align-items: start;
  }
  .svgTextWrapper div:last-child p {
    padding-block: 0.5rem 1rem;
  }
  @media screen and (max-width: 1023px) {
    .svgTextWrapper {
      flex-wrap: wrap;
    }
    .svgTextWrapper:not(:last-child) {
      margin-bottom: 1rem;
    }

    #whyUsWrapper {
      flex-wrap: wrap;
      width: 100%;
      max-width: 30rem;
    }

    #company_owner {
      width: 100%;
      max-width: 30rem;
      height: auto;
    }
  }
</style>
