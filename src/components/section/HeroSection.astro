---
import backgroundImage from "../../assets/backgroundImage.webp";
import Image from "astro/components/Image.astro";
---

<section id="darkOverlay">
  <Image
    priority
    src={backgroundImage}
    alt="backgroundImage"
    id="backgroundImage"
  />
  <slot />
</section>

<style>
  #darkOverlay {
    background-color: rgba(0, 0, 0, 0.6);
    position: relative;
    top: 0;
    left: 0;

    width: 100%;
    height: 100%;

    padding-top: 2rem;

    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
  }
  #backgroundImage {
    position: absolute;
    z-index: -1;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
</style>
