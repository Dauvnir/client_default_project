---
import backgroundImage from "../../assets/backgroundImage.jpg";
import Image from "astro/components/Image.astro";
---

<div id="darkOverlay">
  <Image
    priority
    src={backgroundImage}
    alt="backgroundImage"
    id="backgroundImage"
  />
  <slot />
</div>

<style>
  #darkOverlay {
    background-color: rgba(0, 0, 0, 0.25);
    position: relative;
    top: 0;
    left: 0;

    width: 100%;
    height: 100%;

    padding-top: 2rem;
    padding-inline: clamp(
      1rem,
      -0.627rem + 7.229vw,
      4rem
    ); /* od 360 px do 1024px min 1rem do max 4rem */

    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
  }
  #backgroundImage {
    position: absolute;
    z-index: -1;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
</style>
