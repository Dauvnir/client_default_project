---
    const backgroundColorDark: string = "hsl(0,0,5)";
    const backgroundColorDarkLight: string = "hsl(0,0,10)";
    const fontColorLight: string = "hsl(0,0,95)";
    const fontColorDark: string = "hsl(0,0,95)";
    const accentColor: string = "hsl(45, 100, 50)";
---

<style is:global define:vars={{backgroundColorDark, backgroundColorDarkLight, fontColorLight,fontColorDark, accentColor}}>
   @import url('https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,100..900;1,100..900&display=swap');
     
   h1,h2,h3,h4,h5{
    font-family: "Raleway", sans-serif;
    font-optical-sizing: auto;
    font-style: normal;
   }
   h1{
    font-size: 72px;
    font-weight: 700;
   }
   h2{
    font-size: 48px;
    font-weight: 700;

   }
   h3{
    font-size: 40px;
    font-weight: 600;

   }
   h4{
    font-size: 32px;
    font-weight: 600;

   }
   h5{
    font-size: 24px;
    font-weight: 500;
   }
   span{
    font-size: 20px;
    font-weight: 500;
   }
   p{
    font-size: 16px;
    font-weight: 400;
   }

</style>    