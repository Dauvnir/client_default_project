<style is:global>
  :root {
    --backgroundColorDark: #0d0d0d;
    --backgroundColorDarkLight: #191919;
    --backgroundColorGrey: hsl(0, 0%, 80%);
    --fontColorLight: hsl(0, 0%, 95%);
    --fontColorDark: #191919;
    --accentColor: #ffbf00;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  a,
  p,
  span,
  button,
  div,
  label,
  input,
  summary {
    font-family: "Raleway", sans-serif;
    font-optical-sizing: auto;
    font-style: normal;
    color: var(--fontColorLight);
  }
  h1 {
    font-size: clamp(
      3rem,
      2.458rem + 2.41vw,
      4rem
    ); /* 48px do 64 px - 360px viewp do 1024px*/
    font-weight: 700;
  }
  h2 {
    font-size: clamp(
      2.5rem,
      2.229rem + 1.205vw,
      3rem
    ); /* 40px do 48 px - 360px viewp do 1024px*/
    font-weight: 700;
  }
  h3 {
    font-size: clamp(
      2rem,
      1.729rem + 1.205vw,
      2.5rem
    ); /* 32px do 40 px - 360px viewp do 1024px*/
    font-weight: 600;
  }
  h4 {
    font-size: clamp(
      1.5rem,
      1.229rem + 1.205vw,
      2rem
    ); /* 24px do 32 px - 360px viewp do 1024px*/
    font-weight: 600;
  }
  h5 {
    font-size: clamp(
      1.25rem,
      1.114rem + 0.602vw,
      1.5rem
    ); /* 20px do 24 px - 360px viewp do 1024px*/
    font-weight: 500;
  }
  span,
  a,
  summary {
    font-size: 20px;
    font-weight: 400;
  }
  p {
    font-size: 16px;
    font-weight: 400;
  }

  section {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;

    margin-top: 4rem;
    gap: 2rem;

    width: 100%;
    height: auto;
  }

  footer,
  header,
  section {
    padding-inline: clamp(
      1rem,
      -0.627rem + 7.229vw,
      4rem
    ); /* od 360 px do 1024px min 1rem do max 4rem */
  }
  a,
  p,
  span,
  button {
    line-height: 1.5;
  }

  /* section:first-child {
    margin-top: 0rem;
    gap: 0rem;
  } */
  .header {
    width: 100%;
    height: auto;

    display: block;

    text-align: center;
  }

  .header span {
    margin-top: 1rem;
  }

  * {
    scroll-behavior: smooth;
  }

  img {
    background: linear-gradient(
      90deg,
      hsl(0, 0%, 15%) 0%,
      hsl(0, 0%, 25%) 50%,
      hsl(0, 0%, 15%) 100%
    );

    background-size: 200% 100%;

    animation: shimmer 4s infinite linear;
  }
  img::before {
    padding: 0.5rem;
  }

  .stopImageAnimation {
    background: transparent;
    animation-play-state: paused;
  }

  @keyframes shimmer {
    0% {
      background-position: 200% 0;
    }
    100% {
      background-position: -200% 0;
    }
  }
</style>

<script>
  const images = document.querySelectorAll<HTMLImageElement>("img");

  images.forEach((img) => {
    const stopAnim = () => img.classList.add("stopImageAnimation");

    if (img.complete) {
      stopAnim();
    } else {
      img.addEventListener("load", stopAnim);
      img.addEventListener("error", stopAnim);
    }
  });
</script>
