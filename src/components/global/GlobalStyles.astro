<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,100..900;1,100..900&display=swap");

  :root {
    --backgroundColorDark: #0d0d0d;
    --backgroundColorDarkLight: #191919;
    --backgroundColorGrey: hsl(0, 0%, 80%);
    --fontColorLight: hsl(0, 0%, 95%);
    --fontColorDark: #191919;
    --accentColor: #ffbf00;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  a,
  p,
  span,
  button,
  div,
  label,
  input {
    font-family: "Raleway", sans-serif;
    font-optical-sizing: auto;
    font-style: normal;
    color: var(--fontColorLight);
  }
  h1 {
    font-size: clamp(
      3rem,
      2.187rem + 3.614vw,
      4.5rem
    ); /* 48px do 72 px - 360px viewp do 1024px*/
    font-weight: 700;
  }
  h2 {
    font-size: clamp(
      2.5rem,
      2.229rem + 1.205vw,
      3rem
    ); /* 40px do 48 px - 360px viewp do 1024px*/
    font-weight: 700;
  }
  h3 {
    font-size: clamp(
      2rem,
      1.729rem + 1.205vw,
      2.5rem
    ); /* 32px do 40 px - 360px viewp do 1024px*/
    font-weight: 600;
  }
  h4 {
    font-size: clamp(
      1.5rem,
      1.229rem + 1.205vw,
      2rem
    ); /* 24px do 32 px - 360px viewp do 1024px*/
    font-weight: 600;
  }
  h5 {
    font-size: clamp(
      1.25rem,
      1.114rem + 0.602vw,
      1.5rem
    ); /* 20px do 24 px - 360px viewp do 1024px*/
    font-weight: 500;
  }
  span,
  a {
    font-size: 20px;
    font-weight: 400;
  }
  p {
    font-size: 16px;
    font-weight: 400;
  }

  section {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;

    margin-top: 4rem;
    gap: 2rem;

    padding-inline: clamp(
      1rem,
      -0.627rem + 7.229vw,
      4rem
    ); /* od 360 px do 1024px min 1rem do max 4rem */

    width: 100%;
    height: auto;
  }
  footer {
    padding-inline: clamp(1rem, -0.627rem + 7.229vw, 4rem);
  }
  a,
  p,
  span,
  button {
    line-height: 1.5;
  }

  section:first-child {
    margin-top: 0rem;
    gap: 0rem;
  }
  .header {
    width: 100%;
    height: auto;

    display: block;

    text-align: center;
  }

  .header span {
    margin-top: 1rem;
  }

  * {
    scroll-behavior: smooth;
  }
</style>
