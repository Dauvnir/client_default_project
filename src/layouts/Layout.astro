---
import SEO from "../components/global/SEO.astro";
import Footer from "../components/section/Footer.astro";
import ResetStyles from "../components/global/ResetStyles.astro";
import GlobalStyles from "../components/global/GlobalStyles.astro";
import Header from "../components/section/Header.astro";
---

<!doctype html>
<html lang="pl">
  <head>
    <SEO />
    <ResetStyles />
    <GlobalStyles />
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    width: 100%;
    height: 100%;
  }
  body {
    background-color: var(--backgroundColorDark);
  }
  main {
    width: 100%;
    height: auto;
  }

  body {
    overflow-x: hidden;
  }
</style>
